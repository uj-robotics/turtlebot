<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/turtlebot"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/controls"
                  android:orientation="vertical" android:layout_above="@+id/speed" android:layout_alignParentTop="true">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_above="@+id/speed" android:layout_alignParentTop="true">
        <TableRow
                android:layout_weight="1"
                android:weightSum="3">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="U"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:id="@+id/u"
                    android:alpha="0.80"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:text="I"
                    android:id="@+id/i"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:text="O"
                    android:id="@+id/o"
                    style="@style/btnStyleHaiti"/>
        </TableRow>

        <TableRow
                android:layout_weight="1"
                android:weightSum="3">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:alpha="0.80"
                    android:layout_margin="1dp"
                    android:text="J"
                    android:id="@+id/j"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:text="K"
                    android:id="@+id/k"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:text="L"
                    android:id="@+id/l"
                    style="@style/btnStyleHaiti"/>
        </TableRow>

        <TableRow
                android:layout_weight="1"
                android:weightSum="3">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="M"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:id="@+id/m"
                    android:layout_weight="1"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:id="@+id/dott"
                    android:layout_margin="1dp"
                    android:alpha="0.80"
                    android:layout_weight="1"
                    style="@style/btnStyleHaiti"/>

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text=","
                    android:id="@+id/dot"
                    android:alpha="0.80"
                    android:layout_weight="1"
                    style="@style/btnStyleHaiti"/>


        </TableRow>


    </TableLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/speed"
                  android:orientation="vertical"
                  android:layout_margin="1dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignRight="@+id/controls" android:layout_alignEnd="@+id/controls">

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="STOP"
                android:layout_margin="2dp"
                android:alpha="0.80"
                android:id="@+id/space_or_k"
                style="@style/StyleOrange"/>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Q"
                android:layout_margin="2dp"
                android:alpha="0.80"
                android:id="@+id/q"
                style="@style/btnStyleBeige"/>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:alpha="0.80"
                android:text="Z"
                android:layout_margin="2dp"
                android:id="@+id/z"
                style="@style/btnStyleBeige"/>

    </LinearLayout>

</RelativeLayout>
